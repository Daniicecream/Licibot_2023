<odoo>
    <data>
        <record id="crm_lead_bidding_activity_action" model="ir.actions.act_window">
            <field name="name">Actividad Licitaci√≥n</field>
            <field name="res_model">crm.lead.bidding.activity</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <record id="crm_lead_bidding_activity_tree_view" model="ir.ui.view">
            <field name="name">crm.lead.bidding.activity.tree.view</field>
            <field name="model">crm.lead.bidding.activity</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="crm_lead_bidding_activity_form_view" model="ir.ui.view">
            <field name="name">crm.lead.bidding.activity.form.view</field>
            <field name="model">crm.lead.bidding.activity</field>
            <field name="arch" type="xml">
                <form create="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label for="name"/>
                                <field name="name" string="Actividad"/>
                            </h1>
                        </div>
                        <group name="info">
                            <group name="code">
                                <field name="code"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>